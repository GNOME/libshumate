{
    "app-id" : "org.gnome.Shumate.Demo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "shumate-demo",
    "tags" : [
        "devel"
    ],
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libshumate",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddemos=true",
                "-Dgtk_doc=true"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libshumate.git"
                }
            ]
        }
    ]
}
